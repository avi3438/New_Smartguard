<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddHubActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        ></android.support.v7.widget.Toolbar>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:text="@string/hub_text"
        android:layout_below="@id/toolbar"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textSize="15sp"/>
    <TextView
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/text2"
        android:text="@string/hubtext2"
        android:layout_below="@id/text1"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="15sp"/>
    <TextView
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/text3"
        android:text="@string/hubtext3"
        android:layout_below="@id/text2"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="15sp"/>
    <TextView
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/text4"
        android:text="@string/hubtext4"
        android:layout_below="@id/text3"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text5"
        android:text="HUB Name"
        android:layout_below="@id/text4"
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/et_hub_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text5"
        android:ems="10"
        android:hint="Granny's House"
        android:inputType="text" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text6"
        android:text="HUB SIM Phone No."
        android:layout_below="@id/et_hub_name"
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"/>
    <EditText
        android:id="@+id/phoneno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text6"
        android:ems="10"
        android:hint="+91 xxxx xx xxxx"
        android:inputType="phone" />


    <Button
        android:id="@+id/btn_addhub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneno"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="136dp"
        android:text="ADD HUB" />


</RelativeLayout>